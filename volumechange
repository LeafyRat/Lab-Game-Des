
using UnityEngine;
using UnityEngine.UI;

public class volumeChange : MonoBehaviour
{
    [SerializeField] Slider VolumeChange;

    // Start is called once before the first execution of Update after the MonoBehaviour is created
    void Start()
    {
        if (!PlayerPrefs.HasKey("music Volume"))
        {
            PlayerPrefs.SetFloat("music volume", 1);
            load();
        }
        else load();
    }
    public void changevolume()
    {
        AudioListener.volume = VolumeChange.value;
        save();
    }
    public void load()
    {
        VolumeChange.value = PlayerPrefs.GetFloat("music volume");
    }
    public void save()
    {
        PlayerPrefs.SetFloat("music volume", VolumeChange.value);
    }

    // Update is called once per frame
    void Update()
    {
        
    }
}
